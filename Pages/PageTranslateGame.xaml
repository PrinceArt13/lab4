<Page x:Class="lab4.PageTranslateGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:lab4"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageTranslateGame">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label FontSize="20" Grid.Row="0" Content="Переведите слово" HorizontalAlignment="Left" Margin="272,32,0,0" VerticalAlignment="Top" Width="201"/>
        <Button Command="{Binding StartWriteGame}" Grid.Row="2" Content="Проверить" HorizontalAlignment="Left" Margin="287.2,24.2,0,0" VerticalAlignment="Top" Width="120" Height="50" />
        <TextBox Grid.Row="1" HorizontalAlignment="Left" Height="23" Margin="287.2,80,0,0" TextWrapping="Wrap" Text="{Binding WSGSelected}" VerticalAlignment="Top" Width="120" />
        <Label  HorizontalAlignment="Left" Margin="287,87,0,0" Content="{Binding WriteSG.English}" FontSize="20" VerticalAlignment="Top" Width="150" Height="53"/>

    </Grid>
</Page>
